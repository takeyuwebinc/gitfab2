<% if Rails.application.credentials.dig(:ga, :stream_measurement_id).present? %>
  <!-- Google tag (gtag.js) -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=<%= Rails.application.credentials.dig(:ga, :stream_measurement_id) %>"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', '<%= Rails.application.credentials.dig(:ga, :stream_measurement_id) %>');
  </script>
<% end %>
